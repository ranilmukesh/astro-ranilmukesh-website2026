<style>
  footer {
    border-top: 1px solid var(--border);
    margin-top: auto;
    padding-bottom: var(--space-md);
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    align-items: flex-start;
  }

  .links {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .links a {
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  .links a:hover {
    color: var(--text);
  }

  .copyright {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin-bottom: 0;
  }
</style>
